            canvas.before:
                Color:
                    rgba: 2, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
                
        TextInput:
            id:sexo
            multiline: False
            size_hint: 0.3, 0.2
            font_size: 18

        Label:
            text: "Fecha: "
            font_size: 20
